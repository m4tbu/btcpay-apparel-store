@model IEnumerable<BTCPayServer.Plugins.ApparelStore.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
    var appId = ViewBag.AppId;
}

<h1>Apparel Store - Product Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="mb-3">
    <a href="@Url.Action("CreateProduct", new { appId })" class="btn btn-primary">Add New Product</a>
    <a href="@Url.Action("Orders", new { appId })" class="btn btn-secondary">View Orders</a>
    <a href="@Url.Action("Index", "ApparelStore", new { appId })" class="btn btn-secondary">View Store</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Variants</th>
            <th>Images</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.BasePrice.ToString("C") @product.Currency</td>
                <td>@product.Variants.Count</td>
                <td>@product.Images.Count</td>
                <td>
                    @if (product.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("EditProduct", new { appId, productId = product.Id })" class="btn btn-sm btn-primary">Edit</a>
                    <form method="post" action="@Url.Action("DeleteProduct", new { appId, productId = product.Id })" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
